<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.simplecalculator_01.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/textView01"
        android:textSize="40dp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberoneblack"
            android:id="@+id/imageView01" />

        <ImageView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numbertwoblack"
            android:id="@+id/imageView02" />

        <ImageView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberthreeblack"
            android:id="@+id/imageView03" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/LinearLayout"
        android:weightSum="1">

        <ImageView
            android:layout_width="268dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/plussignblue"
            android:id="@+id/imageView04"
            android:layout_weight="0.21" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/textView02"
        android:textSize="40dp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberfourblack"
            android:id="@+id/imageView05"
            android:layout_weight="0.37" />

        <ImageView
            android:layout_width="106dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberfiveblack"
            android:id="@+id/imageView06" />

        <ImageView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numbersixblack"
            android:id="@+id/imageView07" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_weight="0.14">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/equalssignblue"
            android:id="@+id/imageView_Equals"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_height="43dp"
        android:id="@+id/textView03"
        android:layout_weight="0.09" />

</LinearLayout>
