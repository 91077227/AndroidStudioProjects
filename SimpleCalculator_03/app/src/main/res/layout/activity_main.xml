<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.palmdigital.simplecalculator_03.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Top"
        android:textAlignment="center"
        android:textSize="50sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberzeroblack"
            android:id="@+id/numberZero01" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberoneblack"
            android:id="@+id/numberOne01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbertwoblack"
            android:id="@+id/numberTwo01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberthreeblack"
            android:id="@+id/numberThree01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberfourblack"
            android:id="@+id/numberFour01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberfiveblack"
            android:id="@+id/numberFive01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbersixblack"
            android:id="@+id/numberSix01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbersevenblack"
            android:id="@+id/numberSeven01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbereightblack"
            android:id="@+id/numberEight01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbernineblack"
            android:id="@+id/numberNine01"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="342dp"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blackdivisionsign"
            android:id="@+id/divSign" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blackplussign"
            android:id="@+id/plusSign"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blackminussign"
            android:id="@+id/minusSign"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blackmultisign"
            android:id="@+id/multiSign"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Middle" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0.04">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/numberzeroblack"
            android:id="@+id/numberZero02" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberoneblack"
            android:id="@+id/numberOne02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbertwoblack"
            android:id="@+id/numberTwo02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberthreeblack"
            android:id="@+id/numberThree02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberfourblack"
            android:id="@+id/numberFour02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numberfiveblack"
            android:id="@+id/numberFive02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbersixblack"
            android:id="@+id/numberSix02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbersevenblack"
            android:id="@+id/numberSeven02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbereightblack"
            android:id="@+id/numberEight02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/numbernineblack"
            android:layout_weight="1"
            android:id="@+id/numberNine02" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="277dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/blackequalssign"
            android:id="@+id/equalsImage"
            android:layout_weight="0.12" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50sp"
        android:id="@+id/textView_Bottom"
        android:layout_weight="0.52" />

</LinearLayout>